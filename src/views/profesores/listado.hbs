<div class="container p-4">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Listado de Profesores</h3>
            </div>
            <div class="col-sm-6">
                <a href="/profesores/agregar" class="btn btn-success d-block text-white">Agregar Profesor</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 mt-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID Profesor</th>
                    <th scope="col">Nombre del Profesor</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each profesores}}
                <tr>
                    <td>{{idProfesor}}</td>
                    <td>{{profesor}}</td>
                    <td>
                        <a href="/profesores/actualizar/{{idProfesor}}" class="btn btn-primary text-white">Modificar</a>
                        <a href="/profesores/eliminar/{{idProfesor}}" class="btn btn-danger text-white">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

