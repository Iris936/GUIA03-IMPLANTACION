<div class="container p-4">

    <div class="row justify-content-center">

        <h1>Actualizar Carrera</h1>

    </div>

    <div class="row justify-content-center mt-4">

        <div class="col-md-4">

            <form action="/carreras/actualizar/{{carrera.idcarrera}}" method="POST">

                <div class="form-group">

                    <label for="idcarrera">ID Carrera</label>

                    <input type="text" class="form-control" id="idcarrera" value="{{carrera.idcarrera}}" disabled>

                </div>

                <div class="form-group">

                    <input type="text" class="form-control" name="carrera" value="{{carrera.carrera}}" placeholder="Nombre de Carrera" autofocus />

                </div>

                <div class="form-group">

                    <button class="btn btn-success btn-block">Guardar Cambios</button>

                </div>

            </form>

        </div>

    </div>

</div>

 